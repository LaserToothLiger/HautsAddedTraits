		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="SunBlocker"]</xpath>
					<value>
						<li Class="HautsTraits.CatastrophistLikedCondition" />
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="GiantSmokeCloud"]</xpath>
