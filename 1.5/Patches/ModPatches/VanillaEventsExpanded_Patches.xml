<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Events Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="PsychicRain"]</xpath>
					<value>
						<li Class="HautsTraits.TempestophileLikedCondition" />
						<li Class="HautsTraits.CatastrophistLikedCondition" />
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="LongNight"]</xpath>
					<value>
						<li Class="HautsTraits.CatastrophistLikedCondition" />
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="IceAge"]</xpath>
					<value>
						<li Class="HautsTraits.CatastrophistLikedCondition" />
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="GlobalWarming"]</xpath>
					<value>
						<li Class="HautsTraits.CatastrophistLikedCondition" />
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/GameConditionDef[defName="Drought"]</xpath>
					<value>
						<li Class="HautsTraits.CatastrophistLikedCondition" />
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>