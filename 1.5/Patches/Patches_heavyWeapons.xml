<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Heavy Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef/modExtensions/li[@Class="HeavyWeapons.HeavyWeapon"]/supportedTraits[li="Tough"]</xpath>
					<value>
						<li>HVT_Strong</li>
						<li MayRequire="Ludeon.RimWorld.Royalty">HVT_AwakenedIncarnate</li>
						<li MayRequire="Ludeon.RimWorld.Royalty">HVT_AwakenedTitan</li>
						<li MayRequire="Ludeon.RimWorld.Royalty">HVT_TTraitBluejay</li>
						<li MayRequire="Ludeon.RimWorld.Royalty">HVT_TTraitCassowary</li>
						<li MayRequire="Ludeon.RimWorld.Royalty">HVT_TTraitQuelea</li>
						<li MayRequire="Ludeon.RimWorld.Royalty">HVT_TTraitUhu</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>